@if (ViewBag.Flag != null)
{
    if (ViewBag.Flag == 1) // Success
    {
        <div role="alert" class="alert alert-success alert-dismissible show">
            <strong>Success: </strong> @ViewBag.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (ViewBag.Flag == 2) // Updated
    {
        <div role="alert" class="alert alert-info alert-dismissible show">
            <strong>Updated: </strong> @ViewBag.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (ViewBag.Flag == -1) // Error
    {
        <div role="alert" class="alert alert-danger alert-dismissible show">
            <strong>Error: </strong> @ViewBag.Message 
            Please try again.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}